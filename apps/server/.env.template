# Server Environment (.env)
# Required for local dev
DATABASE_URL="postgres://postgres:@127.0.0.1:5432/shadow_dev"
DIRECT_URL="postgres://postgres:@127.0.0.1:5432/shadow_dev"

# Auth
BETTER_AUTH_SECRET=dev-secret

# GitHub Personal Token (local quick start)
GITHUB_PERSONAL_ACCESS_TOKEN=
# Alternative name some libs use
GITHUB_TOKEN=

# GitHub App (optional in dev; required in prod or when FORCE_GITHUB_APP=true)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=
GITHUB_APP_ID=
GITHUB_APP_SLUG=
GITHUB_PRIVATE_KEY=
FORCE_GITHUB_APP=false

# Server
NODE_ENV=development
API_PORT=4000
API_URL=http://localhost:4000

# Agent execution
AGENT_MODE=local
WORKSPACE_DIR=/workspace

# CORS
CORS_ORIGINS=http://localhost:3000

# Vector DB (optional)
PINECONE_API_KEY=
PINECONE_INDEX_NAME=shadow
EMBEDDING_MODEL=llama-text-embed-v2
USE_PINECONE=false

# Models and concurrency
CONCURRENCY=4
MODEL=gpt-4o
MODEL_MINI=gpt-4o-mini

# Braintrust (optional)
BRAINTRUST_API_KEY=
BRAINTRUST_PROJECT_ID=
ENABLE_BRAINTRUST=false

# MCP (optional)
MCP_CONTEXT7_URL=https://mcp.context7.com/sse
MCP_CONTEXT7_ENABLED=true

# Production-only keys (documented for completeness)
SHADOW_API_KEY=
VM_IMAGE_REGISTRY=
VM_IMAGE_TAG=latest
VM_CPU_COUNT=1
VM_MEMORY_SIZE_MB=1024
KUBERNETES_NAMESPACE=shadow
K8S_SERVICE_ACCOUNT_TOKEN=
VM_CPU_LIMIT=1000m
VM_MEMORY_LIMIT=2Gi
VM_STORAGE_LIMIT=10Gi
HEALTH_CHECK_INTERVAL=60000
VM_HEALTH_CHECK_TIMEOUT=10000
MAX_CONCURRENT_VMS=3
MAX_VM_UPTIME_HOURS=4
