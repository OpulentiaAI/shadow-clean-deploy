# Frontend Environment (.env.local)

# Point frontend to your server
NEXT_PUBLIC_SERVER_URL=http://localhost:4000

# Environment marker
NEXT_PUBLIC_VERCEL_ENV=development

# Optional: force GitHub App flow (default false in dev)
NEXT_PUBLIC_FORCE_GITHUB_APP=false

# Optional: Vercel production URL used by better-auth
NEXT_PUBLIC_VERCEL_PROJECT_PRODUCTION_URL=

# OAuth (optional for local)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
BETTER_AUTH_SECRET=dev-secret

# Personal GitHub token for local quick start (front-end reads for selector)
GITHUB_PERSONAL_ACCESS_TOKEN=
GITHUB_TOKEN=

# Optional backend API key for production
SHADOW_API_KEY=

# Internal fallback if used
BACKEND_URL=http://localhost:4000