{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@repo/types": [
        "../../packages/types/src"
      ],
      "@repo/types/*": [
        "../../packages/types/src/*"
      ],
      "@repo/db": [
        "../../packages/db/src"
      ],
      "@repo/db/*": [
        "../../packages/db/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
